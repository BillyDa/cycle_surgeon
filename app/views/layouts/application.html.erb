<!DOCTYPE html>
<html>
  <head>
    <title>CycleSurgeon</title>

    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
  </head>
  <body>
    <nav>

      <% if @current_user.surgeon == true %>
      <!-- Surgeon nav bar  -->
      <ul>
        <li>
          <%= link_to 'My Dashoard', root_url %>
        </li>
        <li>
          <%= link_to 'See All Active Tickets', tickets_url %>
        </li>
        <li>
          <%= link_to 'About', about_path%>
        </li>
        <li>
          <!-- Need log out -->
        </li>
      </ul>

      <% elsif @current_user != nil && @current_user.surgeon == nil %>
      <!-- Cyclist Nav Bar -->
      <ul>
        <li>
          <%= link_to 'My Dashoard', root_url %>
        </li>
        <li>
          <%= link_to 'Submit a Ticket', new_ticket_url %>
        </li>
        <li>
          <%= link_to 'About', about_path%>
        </li>
        <li>
          <!-- Need log out -->
        </li>
      </ul>

      <% elsif @current_user == nil %>
      <!-- New visitor nav bar -->
        <ul>
          <li>
            <%= link_to 'Sign In', root_url%>
          </li>
          <li>
            <%= link_to 'Sign Up', root_url%>
          </li>
          <li>
            <%= link_to 'About', about_path%>
          </li>
        </ul>
      <% end %>
    </nav>

    <%= yield %>
  </body>
</html>
