<!DOCTYPE html>
<html>
  <head>
    <title>CycleSurgeon</title>

    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
  </head>
  <body>
    <nav>
      <% if @current_user == nil %>
        <ul>
          <li>
            <%= link_to 'Sign In', root_url%>
          </li>
          <li>
            <%= link_to 'Sign Up', root_url%>
          </li>
          <li>
            <%= link_to 'About', about_path%>
          </li>
        </ul>

      <% if @current_user.surgeon == true %>
        <% end %>
      <% end %>
    </nav>

    <%= yield %>
  </body>
</html>
