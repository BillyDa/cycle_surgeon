<div class="dashboard">
    <p><%= link_to 'Return to your dashboard', user_path(current_user) %></p>
</div>

<%= form_for @ticket do |f| %>
  <% if @ticket.errors.any? %>
    <div class="errors-block">
      There are
      <%= pluralize(@ticket.errors.count, "error") %>.
      <ul>
        <% @ticket.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>

    </div>
  <% end %>

    <div>
      <% f.label :user_id %>
      <% f.hidden_field :user_id %>
    </div>

    <div>
      <%= form_for @ticket do |f| %>
      <div>
        <p><%= f.label :street %>
        <%= f.text_field :street, placeholder: '220 King Street West' %>
        "Some streets return as an error, sorry!"</p>
      </div>

      <div>
        <%= f.label :city %>
        <%= f.text_field :city, placeholder: 'Toronto' %>
      </div>

      <div>
        <%= f.label :state %>
        <%= f.text_field :state, placeholder: 'Ontario' %>
      </div>

      <div>
        <%= f.label :country %>
        <%= f.text_field :country, placeholder: 'Canada' %>
      <% end %>
    </div>
    <div>
      <% f.label :ticket_id %>
      <% f.hidden_field :ticket_id, :value => @ticket.id %>
    </div>

    <div id="radio_tag">
       <%= f.label :repair_type %> <%='. Please choose the most applicable option' %><br />
         <%= f.label :hydraulic_disc %>
         <%= f.radio_button :repair, 0 %>
         <div class="buttons">
           <%= image_tag('hydraulic_disc.png') %><br />
         </div>
         <%= f.label :handle_bar %>
         <%= f.radio_button :repair, 1 %>
         <div class="buttons">
           <%= image_tag('handle_bar.png') %><br />
         </div>
         <%= f.label :brake %>
         <%= f.radio_button :repair, 2 %>
         <div class="buttons">
           <%= image_tag('brake.png') %><br />
         </div>
         <%= f.label :saddle %>
         <%= f.radio_button :repair, 3 %>
         <div class="buttons">
           <%= image_tag('saddle.png') %><br />
         </div><br />
         <%= f.label :lever %>
         <%= f.radio_button :repair, 4 %>
         <div class="buttons">
           <%= image_tag('lever.png') %><br />
         </div>
         <%= f.label :v_brake %>
         <%= f.radio_button :repair, 5 %>
         <div class="buttons">
           <%= image_tag('v_brake.png') %><br />
         </div>
         <%= f.label :flat_tire %>
         <%= f.radio_button :repair, 6 %>
         <div class="buttons">
           <%= image_tag('flat_tire.png') %><br />
         </div>
         <%= f.label :tune_up %>
         <%= f.radio_button :repair, 7 %>
         <div class="buttons">
           <%= image_tag('tune_up.png') %><br />
         </div>
         <%= f.label :other %>
         <%= f.radio_button :repair, 8 %>
         <div class="buttons">
           <%= image_tag('other.png') %><br />
         </div>
     </div>


    <div>
      <%= f.label :description %>
      <%= f.text_field :description, placeholder: 'If other, please specify the operation' %><br />
    </div>


    <div class="submit">
      <%= f.submit %>
    </div>

<% end %>
